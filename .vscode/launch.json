{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (HttpApi.Host)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/BazarZone.HttpApi.Host/bin/Debug/net10.0/BazarZone.HttpApi.Host.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/BazarZone.HttpApi.Host",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Run API (Antigravity)",
            "type": "node-terminal",
            "request": "launch",
            "command": "dotnet run --project ${workspaceFolder}/src/BazarZone.HttpApi.Host/BazarZone.HttpApi.Host.csproj",
            "cwd": "${workspaceFolder}",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}